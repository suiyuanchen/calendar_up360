<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">


    <ImageView
        android:id="@+id/iv_select_bg"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="@drawable/mn_selected_bg_centre" />

    <ImageView
        android:id="@+id/iv_bg_left"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_toLeftOf="@+id/iv_select_bg"
        android:background="@drawable/mn_selected_bg_centre"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_bg_right"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_toRightOf="@+id/iv_select_bg"
        android:background="@drawable/mn_selected_bg_centre"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/ll_day"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_centerInParent="true"
            android:textColor="@color/mn_calendar_color_text_solar"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_today"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tvDay"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="#14BF5C" />

        <TextView
            android:id="@+id/tv_small"
            android:layout_below="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textSize="10dp" />

    </RelativeLayout>


</RelativeLayout>